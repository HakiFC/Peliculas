@model Peliculas.Web.Models.PeliculasModel

<div class="jumbotron">
    <h1 style="text-align:center">@Model.Pelicula.title</h1>
    <h3 style="text-align:center">@Model.Pelicula.original_title</h3>
</div>
<div class="row">
    <div class="col-md-6">
        <img src="https://image.tmdb.org/t/p/w342@(Model.Pelicula.poster_path)" class="center-block" />
    </div>
    <div class="col-md-6">
        <h2 style="color: white;">Descripción:</h2>
        <p style="color: white;">@Model.Pelicula.overview</p>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <p style="color: white;">Fecha de estreno: @Model.Pelicula.release_date.ToShortDateString()</p>
            </div>
            <div class="col-md-6">
                <p style="color: white;">Valoración: @Model.Pelicula.vote_average / Votos: @Model.Pelicula.vote_count</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p style="color: white;">Popularidad: @Model.Pelicula.popularity</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p style="color: white;"><i class="fas fa-link"></i> <a href="@Model.Pelicula.homepage" target="_blank">@Model.Pelicula.homepage</a></p>
            </div>
        </div>
    </div>
</div>
